<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BetweenUs" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorBB</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorBB</item>
        <item name="colorOnPrimary">@color/primaryTextColorBB</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorBB</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorBB</item>
        <item name="colorOnSecondary">@color/secondaryTextColorBB</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/surfaceColorBB</item>
        <item name="colorOnSurface">@color/surfaceTextColorBB</item>
        <item name="android:colorBackground">@color/colorBackgroundBB</item>
        <item name="colorOnBackground">@color/colorOnBackgroundBB</item>

        <!-- Custom attributes -->
        <item name="colorActionBar">@color/blue_40</item>
        <item name="colorActionBarExtra">@color/blue_30</item>
        <item name="colorOnActionBar">@color/white</item>
        <item name="colorLightText">@color/light_grey</item>
        <item name="colorMessageBox">@color/black_40</item>
        <item name="colorMessageText">@color/white</item>
        <item name="colorSendMessageBox">@color/blue_10</item>
        <item name="colorSendMessageExtra">@color/blue_40</item>
        <item name="colorOnSendMessageBox">@color/white</item>
    </style>
</resources>